<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#deebed">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_timer"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="75dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="@string/value_exercise"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:text="@string/value"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:text="@string/performance"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />

        <EditText
            android:id="@+id/minutes_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:ems="5"
            android:hint="@string/minutes"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:maxLength="2"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/seconds_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:hint="@string/seconds"
            android:textSize="12sp"
            android:maxLength="2"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="@string/approaches"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>

        <EditText
            android:id="@+id/value_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:inputType="number"
            android:hint="@string/value_repeat"
            android:maxLength="2"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:selectAllOnFocus="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/rest"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>

        <EditText
            android:id="@+id/minutes_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:ems="5"
            android:hint="@string/minutes"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:maxLength="2"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/seconds_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:hint="@string/seconds"
            android:textSize="12sp"
            android:maxLength="2"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:text="@string/rest_between_circle"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>

        <EditText
            android:id="@+id/minutes_rest_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:ems="5"
            android:hint="@string/minutes"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:maxLength="2"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/seconds_rest_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:hint="@string/seconds"
            android:textSize="12sp"
            android:maxLength="2"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <Button
        android:id="@+id/start_training"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounding_button"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="@string/str"/>

</LinearLayout>